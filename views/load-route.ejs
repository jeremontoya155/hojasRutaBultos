<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cargar Hoja de Ruta</title>
    <link rel="stylesheet" href="/css/load-route.css">
</head>
<body>
    <h2>Cargar Nueva Hoja de Ruta</h2>

    <form action="/admin/create-route" method="POST" id="routeForm">
        <!-- Selección de repartidor -->
        <div class="route-line">
            <label for="repartidor">Repartidor:</label>
            <select name="repartidor" id="repartidor" required>
                <option value="" disabled selected>Selecciona un repartidor</option>
                <% repartidores.forEach(repartidor => { %>
                <option value="<%= repartidor.nombre %>" data-ruta="<%= repartidor.recorrido %>"><%= repartidor.nombre %></option>
                <% }); %>
            </select>
            <button type="button" id="editRepartidor" style="display:none;">Editar Repartidor</button>
        </div>
    
        <!-- Selección de Sucursal y Escaneo de Códigos -->
        <div id="route-sheet" style="display: none;">
            <div class="route-line">
                <label for="sucursal">Sucursal:</label>
                <select id="sucursal" name="sucursal" required>
                    <option value="" disabled selected>Selecciona una sucursal</option>
                </select>
            </div>
    
            <div class="route-line">
                <button type="button" id="startScanning">Comenzar a Pistolear</button>
            </div>
    
            <div id="scanning-section" style="display: none;">
                <h4>Pistolear Códigos</h4>
                <input type="text" id="codigoQR" placeholder="Escanear código QR" autofocus>
                <ul id="codigoList"></ul>
                <button type="button" id="confirmSucursal" disabled>Confirmar Sucursal</button>
            </div>
        </div>
    
        <!-- Sección para el Resumen -->
        <div id="summary-section" style="display: none;">
            <h3>Resumen de Cargas</h3>
            <ul id="summaryList"></ul>
            <div id="summaryDetail"></div> <!-- Aquí se mostrará el desglose de tipos -->
            <button type="submit" id="finishLoading">Finalizar y Guardar Hoja de Ruta</button>
        </div>
    </form>

    <!-- Botón para eliminar códigos seleccionados -->
    <div class="route-line" id="delete-section" style="display: none;">
        <button type="button" id="deleteSelected">Eliminar Códigos Seleccionados</button>
    </div>
    
    <script>
        const repartidorSelect = document.getElementById('repartidor');
        const sucursalSelect = document.getElementById('sucursal');
        const codigoQRInput = document.getElementById('codigoQR');
        let codigoList = [];
        const summaryList = document.getElementById('summaryList');
        const summaryDetail = document.getElementById('summaryDetail');
        const deleteSection = document.getElementById('delete-section');

        const classificationCriteria = {
            "1": "Cajas",
            "2": "Cubetas",
            "3": "Refrigerado",
            "4": "Bolsas",
            "5": "Encargado",
            "6": "Varios"
        };

        repartidorSelect.addEventListener('change', function() {
            const ruta = this.options[this.selectedIndex].getAttribute('data-ruta');
            sucursalSelect.innerHTML = '<option value="" disabled selected>Selecciona una sucursal</option>';
    
            if (ruta) {
                const sucursales = ruta.split(',');
                sucursales.forEach(sucursal => {
                    const option = document.createElement('option');
                    option.value = sucursal;
                    option.textContent = sucursal;
                    sucursalSelect.appendChild(option);
                });
    
                document.getElementById('route-sheet').style.display = 'block';
                repartidorSelect.disabled = true; // Deshabilitar el select de repartidor

                // Mostrar el botón de edición
                document.getElementById('editRepartidor').style.display = 'inline-block';
            }
        });

        document.getElementById('editRepartidor').addEventListener('click', function() {
            if (confirm('¿Deseas cambiar el repartidor y reiniciar la carga?')) {
                // Resetear el formulario y habilitar el select de repartidor
                repartidorSelect.disabled = false;
                repartidorSelect.value = '';
                sucursalSelect.innerHTML = '<option value="" disabled selected>Selecciona una sucursal</option>';
                document.getElementById('route-sheet').style.display = 'none';
                document.getElementById('scanning-section').style.display = 'none';
                document.getElementById('summary-section').style.display = 'none';
                codigoList = [];
                document.getElementById('codigoList').innerHTML = '';
                summaryList.innerHTML = '';
                summaryDetail.innerHTML = '';
                document.getElementById('editRepartidor').style.display = 'none'; // Ocultar el botón de edición
            }
        });
    
        document.getElementById('startScanning').addEventListener('click', () => {
            document.getElementById('scanning-section').style.display = 'block';
            codigoQRInput.focus();
        });
    
        codigoQRInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && this.value.trim()) {
                e.preventDefault();
                const codigo = this.value.trim();
    
                // Verificar si el código ya ha sido escaneado en la misma sucursal
                if (codigoList.some(c => c.codigo === codigo)) {
                    alert(`El código ${codigo} ya ha sido escaneado para esta sucursal.`);
                } else {
                    const tipo = classificationCriteria[codigo.charAt(0)] || "Desconocido";
                    codigoList.push({ codigo, tipo });
                    const li = document.createElement('li');
                    li.innerHTML = `<input type="checkbox" class="codigo-checkbox"> ${codigo} - <strong>${tipo}</strong>`;
                    document.getElementById('codigoList').appendChild(li);
                }
    
                this.value = '';
                this.focus();
                document.getElementById('confirmSucursal').disabled = codigoList.length === 0;
                deleteSection.style.display = 'block'; // Mostrar la sección de eliminar cuando haya códigos
            }
        });
    
        document.getElementById('confirmSucursal').addEventListener('click', () => {
            const sucursal = sucursalSelect.value;
            const cantidadBultos = codigoList.length;
    
            if (confirm(`¿Desea confirmar la carga para la sucursal ${sucursal}?`)) {
                const li = document.createElement('li');
                li.textContent = `Sucursal ${sucursal}\nTotal de cargas:${cantidadBultos} `;
                summaryList.appendChild(li);
    
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'data[]';
                input.value = JSON.stringify({ sucursal: sucursal, codigos: codigoList.map(c => c.codigo) });
                document.getElementById('routeForm').appendChild(input);

                // Generar el resumen detallado por tipo
                const summary = codigoList.reduce((acc, curr) => {
                    acc[curr.tipo] = (acc[curr.tipo] || 0) + 1;
                    return acc;
                }, {});

                let summaryHtml = '<h4>Detalle de tipos:</h4><ul>';
                for (const [tipo, cantidad] of Object.entries(summary)) {
                    summaryHtml += `<li>${tipo}: ${cantidad}</li>`;
                }
                summaryHtml += '</ul>';
                summaryDetail.innerHTML = summaryHtml;

                codigoList = [];
                document.getElementById('codigoList').innerHTML = '';
                document.getElementById('scanning-section').style.display = 'none';
                document.getElementById('route-sheet').style.display = 'block';
                sucursalSelect.value = '';
                document.getElementById('summary-section').style.display = 'block';
                document.getElementById('confirmSucursal').disabled = true;
                deleteSection.style.display = 'none'; // Ocultar la sección de eliminar después de confirmar
            }
        });

        // Función para eliminar los códigos seleccionados
        document.getElementById('deleteSelected').addEventListener('click', () => {
            const checkboxes = document.querySelectorAll('.codigo-checkbox:checked');
            checkboxes.forEach(checkbox => {
                const li = checkbox.parentElement;
                const codigo = li.textContent.split(' - ')[0].trim();
                codigoList = codigoList.filter(c => c.codigo !== codigo);
                li.remove();
            });
            document.getElementById('confirmSucursal').disabled = codigoList.length === 0;
            if (codigoList.length === 0) {
                deleteSection.style.display = 'none'; // Ocultar la sección de eliminar si no hay códigos
            }
        });
    
        document.getElementById('finishLoading').addEventListener('click', () => {
            if (confirm('¿Desea guardar la hoja de ruta?')) {
                document.getElementById('routeForm').submit();
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            // Aplicar el efecto de fade-in cuando la página se carga
            document.body.classList.add('fade-in');

            // Función para aplicar fade-out y redirigir a la nueva página
            function applyFadeOutAndRedirect(url) {
                document.body.classList.add('fade-out');
                setTimeout(() => {
                    window.location.href = url;
                }, 1000); // Debe coincidir con la duración de la transición en CSS
            }

            // Añadir el efecto fade-out a los enlaces y botones de navegación
            document.querySelectorAll('a, button').forEach(element => {
                element.addEventListener('click', (e) => {
                    if (element.tagName.toLowerCase() === 'a' && element.href) {
                        e.preventDefault();
                        applyFadeOutAndRedirect(element.href);
                    } else if (element.tagName.toLowerCase() === 'button' && element.onclick) {
                        e.preventDefault();
                        applyFadeOutAndRedirect(element.getAttribute('onclick').split("'")[1]);
                    }
                });
            });
        });

    </script>
    
</body>
</html>
