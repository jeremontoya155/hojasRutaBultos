<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoja de Ruta ID: <%= routeSheetId %></title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

    <div class="nav">
        <h2>Resumen General de la Hoja de Ruta ID: <%= routeSheetId %></h2>
    </div>

    <table id="DetalleHojaRuta">
        <thead>
            <tr>
                <th>Sucursal</th>
                <th>Cantidad de Bultos</th>
                <th>Refrigerados</th>
                <th>Cantidad de Refrigerados</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (routeSheetDetails.length > 0) { %>
                <% routeSheetDetails.forEach(detail => { %>
                <tr>
                    <td><%= detail.sucursal %></td>
                    <td><%= detail.cantidad_bultos %></td>
                    <td><%= detail.refrigerados ? 'Sí' : 'No' %></td>
                    <td><%= detail.cantidad_refrigerados %></td>
                    <td>
                        <a href="/admin/route-detail/<%= routeSheetId %>/<%= detail.sucursal %>">Ver Detalles</a>
                    </td>
                </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">No hay detalles disponibles para esta hoja de ruta.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
    <h3>Resumen por Tipo de Código de Barra</h3>
    <table id="ResumenTipos">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            <% if (Object.keys(summaryByType).length > 0) { %>
                <% for (let tipo in summaryByType) { %>
                <tr>
                    <td><%= tipo %></td>
                    <td><%= summaryByType[tipo] %></td>
                </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="2">No hay códigos de barra categorizados.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <a href="/admin">Volver a mis hojas de ruta</a>
</body>
</html>
