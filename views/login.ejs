<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoja de rutas</title>
    <link rel="stylesheet" href="/css/login.css">  <!-- Asegúrate de que la ruta sea correcta -->
</head>
<body>
    <div class="login-container">
        <form action="/login" method="POST">
            <div class="form">
                <h1>Ingreso hoja de rutas</h1>
                <input type="text" id="username" name="username" placeholder="Ingrese usuario" required>

                <div class="password-container">
                    <input type="password" id="password" name="password" placeholder="Ingrese su contraseña" required>
                    <span class="eye-icon" onclick="togglePasswordVisibility()">
                        <img id="togglePasswordIcon" src="/images/eye.ico" alt="Ver contraseña" />
                    </span>
                </div>

                <button type="submit">Ingresar</button>
            </div>
            <div class="logoLogin">
                <img src="/images/LogoBlanco.png" alt="FSA">
            </div>
        </form>
    </div>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('togglePasswordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.src = "/images/eye-slash.ico";  // Cambia el ícono al "ojo tachado"
            } else {
                passwordInput.type = 'password';
                toggleIcon.src = "/images/eye.ico";  // Vuelve a poner el ícono de ojo
            }
        }
    </script>
</body>
</html>
